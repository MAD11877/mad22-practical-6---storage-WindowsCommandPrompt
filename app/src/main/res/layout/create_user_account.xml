<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginPageBackgroundColour"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity = "center_horizontal">
            <TextView
                android:layout_width="480px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Set username: "
                android:textSize="70px"></TextView>
            <EditText
                android:id = "@+id/setUsernameFieldText"
                android:layout_height="match_parent"
                android:layout_width = "500px"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "220px"
            android:gravity = "center_horizontal">
            <TextView
                android:layout_width="480px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Set password: "
                android:textSize="70px"></TextView>
            <EditText
                android:id = "@+id/setPasswordFieldText"
                android:layout_height="match_parent"
                android:layout_width = "500px"></EditText>
        </LinearLayout>
        <TextView
            android:id = "@+id/autoGeneratePassword"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "Tap here to let the system generate a password for you"
            android:textSize = "35px"
            android:gravity = "center"
            android:clickable = "true"
            android:textColor = "@color/waveColor"
            android:textStyle = "bold"
            android:layout_marginTop = "120px"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width = "match_parent"
            android:layout_marginTop = "120px"
            android:orientation = "horizontal"
            android:gravity = "center_horizontal">
            <Button
                android:id = '@+id/confirmationSignUpButton'
                android:layout_width = "300px"
                android:layout_height = "150px"
                android:text = "SIGN UP"
                app:backgroundTint = "@null"
                android:background = "@color/green"></Button>
            <!--Unfortunately for buttons you will have to use a @drawable resource-->
            <Button
                android:id = '@+id/cancelSignUpButton'
                android:layout_width = "300px"
                android:layout_height = "150px"
                android:text = "CANCEL"
                android:layout_marginLeft = "120px"
                app:backgroundTint = "@null"
                android:background = "@drawable/buttonstyling">
            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>